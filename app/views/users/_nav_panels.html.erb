<div class="user">

  <% if current_user.has_role? :customer %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">订单管理</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li><%= link_to "我的购物车 (#{current_user.cart.line_items.size})", cart_path %>
          <ul>
            <li><%= link_to "未提交订单 (#{current_cart.line_items.uncommitted.count})", cart_path(state: 'uncommitted') %></li>
            <li><%= link_to "已提交订单 (#{current_cart.line_items.committed.count})", cart_path(state: 'committed') %></li>
            <li><%= link_to "被拒绝订单 (#{current_cart.line_items.rejected.count})", cart_path(state: 'rejected') %></li>
            <li><%= link_to "已审核订单 (#{current_cart.line_items.verified.count})", cart_path(state: 'verified') %></li>
            <li><%= link_to "已报价订单 (#{current_cart.line_items.quoted.count})", cart_path(state: 'quoted') %></li>
          </ul>
          </li>
          <li><%= link_to "我的订单 (#{current_user.orders.size})", orders_path %>
          <ul>
            <li><%= link_to "未付款订单项 (#{current_user.ordered_line_items.quoted.count})", line_items_path(state: 'quoted', user_id: current_user.id, order_id: true) %></li>
            <li><%= link_to "已付款订单项 (#{current_user.ordered_line_items.paid.count})", line_items_path(state: 'paid', user_id: current_user.id, order_id: true) %></li>
            <li><%= link_to "已出单订单项 (#{current_user.ordered_line_items.shipped.count})", line_items_path(state: 'shipped', user_id: current_user.id, order_id: true) %></li>
            <li><%= link_to "已取消订单项 (#{current_user.ordered_line_items.cancelled.count})", line_items_path(state: 'cancelled', user_id: current_user.id, order_id: true) %></li>
          </ul>
          </li>
          <li><%= link_to "已取消订单", '#' %>
          <ul>
            <li><%= link_to "已取消订单项 (#{current_user.line_items.cancelled.where(order_id: nil).count})", line_items_path(state: 'cancelled', user_id: current_user.id, order_id: false) %></li>
          </ul>
        </ul>
      </div>
    </div> <!-- panel -->
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">订单管理</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><%= link_to "未提交订单 (#{LineItem.uncommitted.count})", line_items_path(state: 'uncommitted') %></li>
        <li><%= link_to "已提交订单 (#{LineItem.committed.count})", line_items_path(state: 'committed') %></li>
        <li><%= link_to "被拒绝订单 (#{LineItem.rejected.count})", line_items_path(state: 'rejected') %></li>
        <li><%= link_to "已审核订单 (#{LineItem.verified.count})", line_items_path(state: 'verified') %></li>
        <li><%= link_to "已报价订单 (#{LineItem.quoted.count})", line_items_path(state: 'quoted') %></li>
        <li><%= link_to "已付款订单 (#{LineItem.paid.count})", line_items_path(state: 'paid') %></li>
        <li><%= link_to "已出单订单 (#{LineItem.shipped.count})", line_items_path(state: 'shipped') %></li>
        <li><%= link_to "已取消订单 (#{LineItem.cancelled.count})", line_items_path(state: 'cancelled') %></li>
      </ul>
    </div>
  </div> <!-- panel -->

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">用户管理</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><%= link_to '用户列表', users_path %></li>
        <li><%= link_to '添加'+t('role.name.admin'), new_admin_users_path %></li>
        <li><%= link_to '添加'+t('role.name.moderator'), new_user_path(role: 'moderator') %></li>
        <li><%= link_to '添加'+t('role.name.manager'), new_manager_users_path %></li>
        <li><%= link_to '添加'+t('role.name.quoter'), new_user_path(role: 'quoter') %></li>
        <li><%= link_to '添加'+t('role.name.park'), new_user_path(role: 'park') %></li>
        <li><%= link_to '添加'+t('role.name.customer'), new_user_path(role: 'customer') %></li>
      </ul>
    </div>
  </div> <!-- panel -->

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">园区管理</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><%= link_to '园区列表', parks_path %></li>
      </ul>
    </div>
  </div> <!-- panel -->

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">保险公司管理</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><%= link_to '保险公司列表', companies_path %></li>
        <li><%= link_to '添加'+t('activerecord.models.company'), new_company_path %></li>
      </ul>
    </div>
  </div> <!-- panel -->

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">保险管理</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><%= link_to '意外险列表', accident_insurances_path %></li>
        <li><%= link_to '健康险列表', health_insurances_path %></li>
        <li><%= link_to '添加'+t('activerecord.models.accident_insurance'), new_accident_insurance_path %></li>
        <li><%= link_to '添加'+t('activerecord.models.health_insurance'), new_health_insurance_path %></li>
      </ul>
    </div>
  </div> <!-- panel -->

  <% if user_signed_in? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">账户管理</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li><%= link_to '会员资料', edit_user_path(user) %></li>
          <li><a href="#" class="">寄送地址</a></li>
          <li><a href="#" class="">账户安全</a></li>
          <li><a href="#" class="">常用联系人</a></li>
          <li><a href="#" class="">我的收藏夹</a></li>
          <li><a href="#" class="">订阅管理</a></li>
        </ul>
      </div>
    </div> <!-- panel -->
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">投保管理</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><a href="#" class="">订单管理</a></li>
        <li><a href="#" class="">保单管理</a></li>
        <li><a href="#" class="">保险卡管理</a></li>
        <li><a href="#" class="">评价管理</a></li>
      </ul>
    </div>
  </div> <!-- panel -->

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">交易管理</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><a href="#" class="">收支明细</a></li>
        <li><a href="#" class="">充提记录</a></li>
        <li><a href="#" class="">消费记录</a></li>
      </ul>
    </div>
  </div> <!-- panel -->

</div> <!-- user -->
