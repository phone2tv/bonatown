<div class="row">
  <div class="user">
    <ol class="breadcrumb">
      <li><a href="#">保险超市网</a></li>
      <li><a href="#">会员中心</a></li>
      <li class="active">会员中心首页</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class='col-md-2'>
    <%= render partial: 'nav_panels', locals: { user: current_user } %>
  </div> <!-- col-md-2 -->
  <div class='col-md-10'>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.admin_profile.name') %></th>
          <th><%= t('activerecord.attributes.user.username') %></th>
          <th><%= t('activerecord.attributes.role.name') %></th>
          <th><%= t('activerecord.attributes.user.email') %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.profile.name, user %> </td>
            <td><%= link_to user.username, edit_user_path(user) %> </td>
            <td><%= t(user.role_name) %> </td>
            <td><%= user.email %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- col-md-2 -->
</div>
