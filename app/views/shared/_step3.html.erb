  <div class="coverbox">
    <div class="coverStep">
      <table width="100%" border="0">
        <tr>
          <td width="130"><%= image_tag "cover-10.png",     width: "59", height: "60" %></td>
          <td width="50"> <%= image_tag "insurance-08.png", width: "50", height: "9" %></td>
          <td width="130"><%= image_tag "cover-01.png",     width: "53", height: "60" %></td>
          <td width="50"> <%= image_tag "insurance-08.png", width: "50", height: "9" %></td>
          <td width="130"><%= image_tag "insurance-06.png", width: "66", height: "66" %></td>
          <td width="50"> <%= image_tag "insurance-08.png", width: "50", height: "9" %></td>
          <td width="130"><%= image_tag "cover-03.png",     width: "69", height: "64" %></td>
        </tr>
        <tr>
          <td height="35">填写投保资料</td>
          <td></td>
          <td>等待报价</td>
          <td></td>
          <td>确认并支付</td>
          <td></td>
          <td>投保成功</td>
        </tr>
      </table>  
    </div>
    <div class="clear"></div>
    <div class="coverInfobox">
      <div class="coverInfoTlet"><%= image_tag "cover-01.jpg", width: "4", height: "3" %></div>
      <div class="coverInfoTrit"><%= image_tag "cover-02.jpg", width: "4", height: "3" %></div>
      <div class="coverInfoBlet"><%= image_tag "cover-03.jpg", width: "4", height: "3" %></div>
      <div class="coverInfoBrit"><%= image_tag "cover-04.jpg", width: "4", height: "3" %></div>
      <!-- <span>订单号 <%# order.order_number %></span> -->
      <div class="memberInfoRemark"> 订单号 <%= order.order_number %> </div>
      <div class="coverInfo coverInfo3">
        <h1>
          <table width="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <th width="35%">保险名称</td>
              <th width="35%">保险公司</td>
              <th width="15%">份数</td>
              <th width="15%">金额</td>
            </tr>
          </table>
        </h1>
        <table width="100%" border="0" cellpadding="0" cellspacing="0">
          <% order.line_items.each do |line_item| %>
          <tr>
            <td width="35%" height="53"><%= line_item.insurance_item.specific_insurance.title %></td>
            <td width="35%"><%= line_item.insurance_item.specific_insurance.company.name %></td>
            <td width="15%"><%= line_item.quantity %></td>
            <td width="15%">￥<%= line_item.price %></td>
          </tr>
          <% end %>
          <tr>
            <td width="25%" height="53" class="coverInfotxt5" colspan="4">总计：<i>￥<%= order.line_items.sum('price') %></i></td>
          </tr>
        </table>
      </div><!--coverInfo--> 
      <div class="clear"></div>

      <div class="coverPay">支付方式：
        <input type="radio" name="RadioGroup1" value="银联" id="RadioGroup1_0" />银联　　<input type="radio" name="RadioGroup1" value="支付宝" id="RadioGroup1_1" />支付宝</div>
      <div class="clear"></div>
      <div class="coverPaybtn">
        <%= link_to '确认，并支付', pay_order_path(order), method: :put if can?(:pay, order) %>
      </div> 
    </div>
