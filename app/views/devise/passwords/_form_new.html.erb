<%= devise_error_messages! %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: '', :method => :post }) do |f| %>
  <div class='form-group'>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', :autofocus => true, placeholder: 'yourname@stacker.com' %>
  </div>

  <div class='form-group'>
    <%= f.submit t("devise.reset_password_instructions"), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
