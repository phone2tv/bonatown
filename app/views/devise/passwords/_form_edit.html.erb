<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: '', :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'required form-control', minlength: 6, :autofocus => true %>
  </div>

  <div class='form-group'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'required form-control', minlength: 6 %>
  </div>

  <div class='form-group'>
    <%= f.submit t('devise.reset_password'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
