<div class="row">
  <div class="user">
    <ol class="breadcrumb">
      <li><a href="#">保险超市网</a></li>
      <li><a href="#">会员中心</a></li>
      <li class="active">会员中心首页</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class='col-md-2'>
    <%= render partial: 'users/nav_panels', locals: { user: current_user } %>
  </div>
  <div class='col-md-10'>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.insurance.title') %></th>
          <th><%= t('activerecord.attributes.insurance.synopsis') %></th>
          <th><%= t('activerecord.attributes.insurance.price') %></th>
          <th><%= t('activerecord.attributes.insurance.aasm_state') %></th>
          <th><%= t('activerecord.attributes.insurance.company_id') %></th>
          <th><%= t('activerecord.attributes.health_insurance.body') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @health_insurances.each do |health_insurance| %>
          <tr>
            <td><%= link_to health_insurance.insurance.title, health_insurance %></td>
            <td><%= health_insurance.insurance.synopsis %></td>
            <td><%= health_insurance.insurance.price %></td>
            <td><%= health_insurance.insurance.aasm_state %></td>
            <td><%= health_insurance.insurance.company.name if health_insurance.insurance.company.present? %></td>
            <td><%= health_insurance.body %></td>
            <td><%= link_to 'Edit', edit_health_insurance_path(health_insurance) %> / <%= link_to 'Destroy', health_insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- col-md-10 -->
</div> <!-- row -->
