<div class="row">
  <div class="user">
    <ol class="breadcrumb">
      <li><a href="#">保险超市网</a></li>
      <li><a href="#">会员中心</a></li>
      <li class="active">会员中心首页</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class='col-md-2'>
    <%= render partial: 'shared/mgr_panels', locals: { user: current_user } %>
  </div>
  <div class='col-md-10'>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.insurance.title') %></th>
          <th><%= t('activerecord.attributes.insurance.synopsis') %></th>
          <th><%= t('activerecord.attributes.insurance.price') %></th>
          <th><%= t('activerecord.attributes.insurance.aasm_state') %></th>
          <th><%= t('activerecord.attributes.insurance.company_id') %></th>
          <th><%= t('activerecord.attributes.insurance.type') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @accident_insurances.each do |accident_insurance| %>
          <tr>
            <td><%= link_to accident_insurance.title, accident_insurance %></td>
            <td><%= accident_insurance.synopsis %></td>
            <td><%= accident_insurance.price %></td>
            <td><%= accident_insurance.aasm_state %></td>
            <td><%= accident_insurance.company.name if accident_insurance.company.present? %></td>
            <td><%= accident_insurance.type %></td>
            <td><%= link_to 'Edit', edit_accident_insurance_path(accident_insurance) %> / <%= link_to 'Destroy', accident_insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- col-md-10 -->
</div> <!-- row -->
