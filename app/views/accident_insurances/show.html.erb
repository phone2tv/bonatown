<div class="row">
  <div class="user">
    <ol class="breadcrumb">
      <li><a href="#">保险超市网</a></li>
      <li><a href="#">会员中心</a></li>
      <li class="active">会员中心首页</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class='col-md-2'>
    <%= render partial: 'shared/mgr_panels', locals: { user: current_user } %>
  </div>
  <div class='col-md-6'>
    <p>
    <%# button_to '加入购物车', line_items_path(line_item: { insurance_id: @accident_insurance.insurance }), class: 'btn btn-success' %>
    <%= link_to '加入购物车', new_accident_item_path(accident_insurance_id: @accident_insurance), class: 'btn btn-success' %>
    </p>
    <p>
    <%# button_to 'Add to Cart', line_items_path(line_item: { insurance_id: @accident_insurance.insurance }), class: 'btn btn-success' %>
    </p>

    <p>
    <strong>Title:</strong>
    <%= @accident_insurance.insurance.title %>
    </p>

    <p>
    <strong>Synopsis:</strong>
    <%= @accident_insurance.insurance.synopsis %>
    </p>

    <p>
    <strong>Price:</strong>
    <%= @accident_insurance.insurance.price %>
    </p>

    <p>
    <strong>State:</strong>
    <%= @accident_insurance.insurance.aasm_state %>
    </p>

    <p>
    <strong>Company:</strong>
    <%= @accident_insurance.insurance.company.name if @accident_insurance.insurance.company.present? %>
    </p>

    <p>
    <strong>Body:</strong>
    <%= @accident_insurance.body %>
    </p>

    <%= link_to 'Edit', edit_accident_insurance_path(@accident_insurance) %> |
    <%= link_to 'Back', accident_insurances_path %>
  </div>
</div> <!-- row -->
