<%= form_for(@profile, :html => { class: 'form-border' }) do |f| %>
  <%= form_error_messages!(f.object) %>

  <%= render partial: 'users/form_user', locals: { user_form: f } %>

  <div class='form-group'>
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :park_name, class: 'control-label' %>
    <%= f.text_field :park_name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :location, class: 'control-label' %>
    <%= f.text_field :location, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :company_id, class: 'control-label' %>
    <%= f.collection_select :company_id, Company.all, :id, :name, { include_blank: false }, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
