<form class="navbar-form navbar-right">
<% if user_signed_in? %>
  <div class='btn-group'>
    <%= link_to current_user.email, current_user, class: 'btn btn-default', 'data-no-turbolink' => true %>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to current_user.email, current_user, 'data-no-turbolink' => true %></li>
      <li class="divider"></li>
      <li class="dropdown-header">Nav header</li>
      <li><%= link_to t('devise.logout'), destroy_user_session_path, method: :delete %></li>
      <li><%= link_to t('devise.logoff'), registration_path(current_user), :method => :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  </div>
<% else %>
  <%= link_to t('devise.login'), new_user_session_path, role: 'button', class: 'btn btn-default' %>
  <%= link_to t('devise.signup'), new_user_registration_path, class: 'btn btn-default' %>
<% end %>
</form>
