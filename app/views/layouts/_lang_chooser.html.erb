<% langs = [
  ['English',         'en'],
  ["简体中文".html_safe,  'zh-CN']
] %>
<!-- form_tag url_for, method: :get, class: 'locale' do -->
<%= form_tag request.original_fullpath, method: :get, class: 'locale' do %>
  <%= image_tag 'lang_chooser.png' %>
  <%= select_tag 'locale', options_for_select(langs, I18n.locale.to_s), onchange: 'this.form.submit()' %>
  <%= submit_tag 'submit' %>
  <%= javascript_tag "$('.locale input').hide()" %>
<% end %>

