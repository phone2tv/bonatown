<div id='header-menubar'>
  <div class='container'>
    <div class='row'>

      <!-- brand -->
      <div class='col-md-2'>
        <%= link_to t('layouts.brand'), root_path, class: 'menubar-brand' %>
      </div>

      <div class='col-md-4'>
        <%# render 'layouts/search_stack' %>
      </div>

      <!-- tabbar -->
      <div class='col-md-3'>
        <div class='pull-right'>
          <%= link_to t('menubar.chat'), root_path, class: 'menulink' %>
          <%= link_to t('menubar.meta'), root_path, class: 'menulink' %>
          <%= link_to t('menubar.about'), root_path, class: 'menulink' %>
          <%= link_to t('menubar.help'), root_path, class: 'menulink' %>
        </div>
      </div>

      <!-- userbar -->
      <div class='col-md-3'>
        <div class='pull-right'>
          <%= render 'layouts/userlink' %>
          <%= link_to current_user.username, current_user, class: 'menulink', 'data-no-turbolink' => true if user_signed_in? %>
        </div>
      </div> <!-- .col-md-3 -->

    </div> <!-- .row -->
  </div> <!-- .container -->
</div> <!-- header-menubar -->
